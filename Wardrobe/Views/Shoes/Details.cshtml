@model Wardrobe.Models.Sho

@{
    ViewBag.Title = "Details";
}

<h2>@Html.DisplayFor(model => model.Name)</h2>

<hr />

<div class="row cozy">
    <div class="col-md-6">
        <img src=@Url.Content(Model.Image) class="detail-image">
    </div>
    <div class="col-md-6">
        <h1>Details</h1>
        <h4>
            <b>@Html.DisplayNameFor(model => model.Type):</b> @Html.DisplayFor(model => model.Type)
        </h4>
        <h4>
            <b>@Html.DisplayNameFor(model => model.Color):</b> @Html.DisplayFor(model => model.Color)
        </h4>
        <h4>
            <b>@Html.DisplayNameFor(model => model.Season):</b> @Html.DisplayFor(model => model.Season)
        </h4>
        <h4>
            <b>@Html.DisplayNameFor(model => model.Occasion):</b> @Html.DisplayFor(model => model.Occasion)
        </h4>
        <h4>
            <b>@Html.DisplayNameFor(model => model.Size):</b> @Html.DisplayFor(model => model.Size)
        </h4>
        <div class="btn-group" role="group">
            <a href=@Url.Action("Edit", "Shoes", new { id = Model.ShoesID }) class="btn btn-default">Edit</a>
            <a href=@Url.Action("Delete", "Shoes", new { id = Model.ShoesID }) class="btn btn-default">Delete</a>
            <a href="~/Shoes" class="btn btn-default">Back to List</a>
        </div>
    </div>
</div>