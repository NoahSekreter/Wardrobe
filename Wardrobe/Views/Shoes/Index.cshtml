@model IEnumerable<Wardrobe.Models.Sho>

@{
    ViewBag.Title = "Shoes";
}

<h2>Shoes</h2>

<h4>
    @Html.ActionLink("Add New Shoes", "Create")
</h4>

<div class="row">
@foreach (var item in Model)
{
    <div class="col-xs-6 col-md-4">
        <a href="@Url.Action("Details","Shoes", new { id=item.ShoesID })" class="thumbnail">
            @*<img src=@Html.DisplayFor(modelItem => item.Image)>*@
            <img src="~/Content/Images/pointy_shoe.jpg" />
            <h2>@Html.DisplayFor(modelItem => item.Name)</h2>
            <p>@Html.DisplayFor(modelItem => item.Type)</p>
        </a>
    </div>
}
</div>   