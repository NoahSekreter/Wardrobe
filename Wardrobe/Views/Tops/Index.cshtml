@model IEnumerable<Wardrobe.Models.Top>

@{
    ViewBag.Title = "Index";
}

<h2>Tops</h2>

<h4>
    @Html.ActionLink("Add New Top", "Create")
</h4>

<div class="row">
@foreach (var item in Model)
{
    <div class="col-xs-6 col-md-4">
        <a href="@Url.Action("Details","Tops", new { id=item.TopID })" class="thumbnail">
            <img src=@Url.Content(item.Image)>
            <h2>@Html.DisplayFor(modelItem => item.Name)</h2>
            <p>@Html.DisplayFor(modelItem => item.Type)</p>
        </a>
    </div>
}
</div>